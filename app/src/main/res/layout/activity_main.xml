<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:id="@+id/resultLL"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:gravity="center"
                android:background="@drawable/red_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/firstNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/red_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/secondNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/red_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/thirdNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/red_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/fourthNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/red_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/fifthNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/red_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/sixthNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <TextView
                android:gravity="center"
                android:background="@drawable/blue_bg"
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:id="@+id/seventhNumTV"
                android:layout_width="30dp"
                android:layout_height="30dp"/>


    </LinearLayout>

    <com.skateboard.numberrunningview.NumberRunningView
            app:speedOffset="1"
            app:maxSpeed="70"
            app:numberColor="@android:color/black"
            app:numberSize="20sp"
            android:layout_gravity="center"
            android:id="@+id/numberRunningView"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:text="start"
                android:id="@+id/startBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:text="stop"
                android:id="@+id/stopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</FrameLayout>